//Nome do herói
let nome = "Kezia"

//Classificador de nível do herói
let XP = 2001
let XPT
 if ( XP < 1000 ) { XPT="Ferro" }
 else if ( XP <= 2000 ) { XPT="Bronze" }
 else if ( XP <= 5000 ) { XPT="Prata" }
 else if ( XP <= 7000 ) {XPT="Ouro"}
 else if ( XP <= 8000 ) {XPT="Platina"}
 else if ( XP <= 9000 ) {XPT="Ascendente"}
 else if ( XP <= 10000 ) {XPT="Imortal"}
console.log("O herói de nome " +nome, "está no nível de " +XPT)